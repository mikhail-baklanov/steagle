<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/fragment_title"/>
    <!-- шапка -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- владелец -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:layout_weight="3">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/labelOwner"
                android:textColor="@color/labelColor"
                android:paddingTop="10dp"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/foo"
                android:id="@+id/owner"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <!-- счет -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1px"
            android:layout_height="80dp"
            android:background="#888888"
            android:baselineAligned="true"
            android:layout_weight="0" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:background="@color/white">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/labelAccount"
                android:textColor="@color/labelColor"
                android:paddingTop="10dp"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/foo"
                android:id="@+id/account"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/foo"
                android:id="@+id/accountStatus"
                android:textColor="@color/statusColor"
                android:textStyle="bold"
                android:paddingLeft="10dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- разделитель -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#888888" />

    <!-- список разделов -->
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <!-- личные оповещения -->
            <LinearLayout
                android:id="@+id/notificationsItem"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/notifications"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/labelNotifications"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp" />

                </LinearLayout>


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/corner_gray_big"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#888888" />

            <!-- баланс -->
            <LinearLayout
                android:id="@+id/balansItem"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/balance"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/labelBalans"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/foo"
                        android:id="@+id/balance"
                        android:textColor="@color/balansColor"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/corner_gray_big"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#888888" />

            <!-- временные зоны -->
            <LinearLayout
                android:id="@+id/timeZoneItem"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/time_zone"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/labelTimeZone"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/foo"
                        android:id="@+id/timeZone"
                        android:textColor="@color/timeZoneColor"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/corner_gray_big"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#888888" />

            <!-- персональная информация -->
            <LinearLayout
                android:id="@+id/personalInfoItem"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/personal_data"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/labelPersonalInfo"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/corner_gray_big"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#888888" />

            <!-- тарифный план -->
            <LinearLayout
                android:id="@+id/tarifItem"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/plan"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/labelTarif"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:id="@+id/tarif"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/foo"
                        android:textColor="@color/tarifColor"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/corner_gray_big"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>